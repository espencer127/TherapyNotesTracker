<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.spencer.therapynotestracker.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SessionEditFragment" />
        <action
            android:id="@+id/action_FirstFragment_to_AddFragment"
            app:destination="@id/NewSessionPrompt" />
    </fragment>
    <fragment
        android:id="@+id/SessionEditFragment"
        android:name="com.spencer.therapynotestracker.sessionedit.SessionEditFragment"
        android:label="@string/session_edit_fragment_label"
        tools:layout="@layout/fragment_session_edit">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
    <dialog
        android:id="@+id/NewSessionPrompt"
        android:label="Prompt"
        tools:layout="@layout/alert_session_prompt">

        <action
            android:id="@+id/action_AddFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </dialog>
</navigation>